.login-box
  .login-logo
    %b> Forgot Your Password?
  / /.login-logo
  .login-box-body
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-group.has-feedback
        = f.email_field :email, :placeholder => "Email", autofocus: true, :class => 'form-control', :required => true
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.password_field :password, :placeholder => "Password", autocomplete: "off", :class => 'form-control', :required => true
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .actions
          = f.submit 'Send me reset password instructions', :class => 'btn btn-primary'
        / /.col
  - if controller_name != 'sessions'
    = link_to "Log in", new_session_path(resource_name) , :class => 'btn btn-primary'       